{
  "manifest_version": 3,
  "name": "Redirect Shield",
  "version": "1.0",
  "description": "Blocks all unwanted redirects and popups.",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.bundle.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "declarativeNetRequest"
  ]
}
